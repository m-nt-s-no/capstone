<div class="row mb-4">
  <div class="col-md-6 offset-md-3">
    <%= render @group %>
    <div>
      <% if current_user == @group.leader %>
        <div class="d-flex align-items-center justify-content-between">
          <div class="btn btn-outline-primary">
            <%= link_to "Edit this group", edit_group_path(@group) %>
          </div>
          <%= button_to "Delete this group", @group, method: :delete, class: 'btn btn-outline-danger' %>
        </div>
      <% end %>
      <div class="mt-3">
        <%= link_to "My groups", my_groups_path(current_user.name) %>
      </div>
    </div>
  </div>
</div>
