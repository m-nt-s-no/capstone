
<%= simple_form_for(@group) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.hidden_field :leader %>
    <%= f.hidden_field :enrollments_count %>

    <h3>Enroll Members</h3>
    <%= f.fields_for :enrollments do |enrollment_form| %>
      <div class="enrollment-fields">
        <%= enrollment_form.association :user, collection: User.where.not(id: current_user.id) %>
        <%= enrollment_form.hidden_field :_destroy %>
      </div>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
